                currentUser.roles.includes('RUTA_4')
            );
            const esSuperAdmin = currentUser.roles && currentUser.roles.includes('SUPER_ADMIN');
            const esRuta1 = currentUser.roles && currentUser.roles.includes('RUTA_1');

