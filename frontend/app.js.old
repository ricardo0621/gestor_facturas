    const navBusqueda = document.getElementById('navBusqueda');
    const navUsuarios = document.getElementById('navUsuarios');
    const navProveedores = document.getElementById('navProveedores');
    const navTiposSoporte = document.getElementById('navTiposSoporte');

    // B√∫squeda Avanzada: visible para todos los usuarios autenticados
    if (navBusqueda) navBusqueda.style.display = 'block';

